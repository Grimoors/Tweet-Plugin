{
    "name": "Tweet Plugin",
    "version": "1.0",
    "description": "A Tweet character counter.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "default_locale": "en",
    "author": "Vivek",
    "manifest_version": 3,
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    }    
}